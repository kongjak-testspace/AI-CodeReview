[Unit]
Description=GitHub PR Code Review Server
After=network.target

[Service]
Type=simple
User=kongjak
WorkingDirectory=/home/kongjak/AI-CodeReview
EnvironmentFile=/home/kongjak/AI-CodeReview/.env
ExecStart=/home/kongjak/AI-CodeReview/.venv/bin/uvicorn app.main:app --host 127.0.0.1 --port 8000
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
